<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="de.stekoe.idss.model.User" table="USERS">
		<id name="id" type="long">
			<generator class="native" />
		</id>
		<property name="username" type="string" not-null="true" />
		<property name="email" type="string" not-null="true" />
		<property name="password" type="string" not-null="true" />
		<one-to-one name="userProfile" class="de.stekoe.idss.model.UserProfile" cascade="save-update">
		</one-to-one>
		<set name="systemroles" table="USER_SYSTEMROLES" cascade="save-update" lazy="false"> 
			<key column="USER_ID" />
			<one-to-many class="de.stekoe.idss.model.Systemrole" />
		</set>
		<property name="activationKey" type="string"></property>
	</class>
</hibernate-mapping>